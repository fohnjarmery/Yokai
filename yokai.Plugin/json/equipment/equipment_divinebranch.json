{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.deref.json",
  "cards": [
    {
      "id": "DivineBranch",
      "names": {
        "english": "Divine Branch",
        "chinese": "神枝"
      },

      "lore_tooltips": [
        {
          "english": "A Magical Branch.",
          "chinese": "蕴含神力的树枝。"
        }
      ],
      "card_type": "equipment",
      "rarity": "uncommon",
      "class": "@ClassYokai",
      "card_art": "@DivineBranchArt",
      "targets_room": true,
      "targetless": false,
      "pools": [
        "MegaPool",
        "RoomAndEquipmentMerchant_EquipmentPool",
        "RoomAndEquipmentMerchant_RoomAndEquipmentPool",
        "RoomAndEquipmentDraftPool",
        "EquipmentPoolNonEnemy",
        "FreeEquipmentMutatorPool"
      ],
      "cost": 2,
      "effects": [
        "@EquipBranch"
      ]
    }
  ],
  "upgrades": [
    {
      "id": "UpgradeBranch",
      "bonus_damage": 12,
      "bonus_hp": 12,
      "trigger_upgrades": [
        "@TriggerBranch"
      ],
      "icon": "@DivineBranchArt"
    }
  ],
  "character_triggers": [
    {
      "id": "TriggerBranch",
      "trigger": {
        "id": "@Evoke",
        "mod_reference": "Conductor"
      },
      "descriptions": {
        "english": "Gain [rage] [effect0.status0.power] and [regen] [effect1.status0.power]",
        "chinese": "获得 [rage] [effect0.status0.power] 和 [regen] [effect1.status0.power]。"
      },
      "effects": [
        "@EvokeBranchRage",
        "@EvokeBranchRegen"
      ]
    }
  ],
  "effects": [
    {
      "id": "EquipBranch",
      "name": "CardEffectAttachEquipment",
      "target_mode": "drop_target_character",
      "target_team": "monsters",
      "param_upgrade": "@UpgradeBranch"
    },
    {
      "id": "EvokeBranchRage",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "self",
      "target_team": "monsters",
      "param_status_effects": [
        {
          "status": "buff",
          "count": 2
        }
      ]
    },
    {
      "id": "EvokeBranchRegen",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "self",
      "target_team": "monsters",
      "param_status_effects": [
        {
          "status": "regen",
          "count": 2
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "DivineBranchArt",
      "path": "textures/DivineBranchArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "DivineBranchArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@DivineBranchArt"
        }
      }
    }
  ]
}