      "param_int": 3,
      "param_bool": true,
      "param_status_effects": [
        {
          "status": "@panic",
          "count": 1
        }
      ]
    }
  ],
  "relics": [
    {
      "id": "Grudge",
      "type": "collectable",
      "names": {
        "english": "Grudge",
        "chinese": "怨念"
