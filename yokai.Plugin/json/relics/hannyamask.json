{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.deref.json",
  "relic_effects": [
    {
      "id": "HannyaMaskEffect",
      "name": "RelicEffectAddTrigger",
      "target_mode": "room",
      "source_team": "monsters",
      "param_bool": true,
      "param_int": 2,
      "triggers": [ "@HannyaMaskResolveTrigger" ]
    }
  ],
  "relics": [
    {
      "id": "HannyaMask",
      "type": "collectable",
      "names": {
        "english": "Hannya Mask",
        "chinese": "般若面具"
      },
      "descriptions": {
        "english": "Friendly units apply [yokai.Plugin_panic] <b>2</b> on <b>Resolve</b>.",
        "chinese": "友方单位在<b>结算</b>时施加[yokai.Plugin_panic] <b>2</b>。"
      },
      "relic_activated": {
        "english": "Spooked!",
        "chinese": "受惊了！"
      },
      "lore_tooltips": [
        {
          "english": "Creepy Mask.",
          "chinese": "令人毛骨悚然的鬼面。"
        }
      ],
      "lore_style": "herzal",
      "relic_effects": [ "@HannyaMaskEffect" ],
      "icon": "@YokaiRelicIcon8",
      "icon_small": "@YokaiRelicIconSmall8",
      "extensions": [
        {
          "collectable": {
            "class": "@ClassYokai",
            "pools": [ "MegaRelicPool" ],
            "rarity": "common",
            "unlock_level": 6,
            "deprioritize_in_ftue_drafts": true
          }
        }
      ]
    }
  ],
  "character_triggers": [
    {
      "id": "HannyaMaskResolveTrigger",
      "trigger": "post_combat",
      "descriptions": {
        "english": "Doesn't need to be here",
        "chinese": "无需在此显灵"
      },
      "hide_visual_and_ignore_silence": true,
      "effects": [
        {
          "id": "@HannyaMaskApplyPanic"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "HannyaMaskApplyPanic",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "room",
      "target_team": "heroes",
      "param_status_effects": [
        {
          "status": "@panic",
          "count": 2
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "YokaiRelicIcon8",
      "path": "textures/YokaiRelicIcon8.png"
    },
    {
      "id": "YokaiRelicIconSmall8",
      "path": "textures/YokaiRelicIconIconSmall8.png"
    }
  ]
}