{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.deref.json",
  "relic_effects": [
    {
      "id": "OniMaskEffect",
      "name": "RelicEffectAddStatusEffectOnSpawn",
      "source_team": "both",
      "param_bool": false,
      "param_status_effects": [
        {
          "status": "@haunt",
          "count": 1
        }
      ]
    }
  ],
  "relics": [
    {
      "id": "OniMask",
      "type": "collectable",
      "names": {
        "english": "Oni Mask",
        "chinese": "鬼面"
      },
      "descriptions": {
        "english": "All units enter with [yokai.Plugin_haunt] <b>1</b>.",
        "chinese": "所有单位入场时带有[yokai.Plugin_haunt] <b>1</b>。"
      },
      "relic_activated": {
        "english": "Haunted!",
        "chinese": "鬼气缠身！"
      },
      "lore_tooltips": [
        {
          "english": "Lots of haunt applies to allies and enemies.",
          "chinese": "无尽的怨念缠绕着友军和敌人。"
        }
      ],
      "disallow_in_deployment": false,
      "lore_style": "herzal",
      "relic_effects": [ "@OniMaskEffect" ],
      "icon": "@YokaiRelicIcon10",
      "icon_small": "@YokaiRelicIconSmall10",
      "extensions": [
        {
          "collectable": {
            "class": "@ClassYokai",
            "pools": [ "MegaRelicPool" ],
            "rarity": "common",
            "unlock_level": 8,
            "deprioritize_in_ftue_drafts": true
          }
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "YokaiRelicIcon10",
      "path": "textures/YokaiRelicIcon10.png"
    },
    {
      "id": "YokaiRelicIconSmall10",
      "path": "textures/YokaiRelicIconIconSmall10.png"
    }
  ]
}