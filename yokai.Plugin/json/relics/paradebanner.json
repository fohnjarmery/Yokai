{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.deref.json",
  "relic_effects": [
    {
      "id": "ParadeBannerEffect",
      "name": "RelicEffectAdditionalDrawPerCardType",
      "param_card_type": "monster",
      "param_int": 6
    }
  ],
  "relics": [
    {
      "id": "ParadeBanner",
      "type": "collectable",
      "names": {
        "english": "Parade Banner",
        "chinese": "百鬼夜行旗"
      },
      "descriptions": {
        "english": "For every 6 Monsters in your deck, draw an additional card.",
        "chinese": "牌组中每有6个怪物，额外抽一张牌。"
      },
      "relic_activated": {
        "english": "March!",
        "chinese": "前进！"
      },
      "lore_tooltips": [
        {
          "english": "The parade must go on.",
          "chinese": "百鬼夜行必须继续。"
        }
      ],
      "lore_style": "herzal",
      "relic_effects": [ "@ParadeBannerEffect" ],
      "icon": "@YokaiRelicIcon6",
      "icon_small": "@YokaiRelicIconSmall6",
      "extensions": [
        {
          "collectable": {
            "class": "@ClassYokai",
            "pools": [ "MegaRelicPool" ],
            "rarity": "common",
            "deprioritize_in_ftue_drafts": true
          }
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "YokaiRelicIcon6",
      "path": "textures/YokaiRelicIcon6.png"
    },
    {
      "id": "YokaiRelicIconSmall6",
      "path": "textures/YokaiRelicIconIconSmall6.png"
    }
  ]
}