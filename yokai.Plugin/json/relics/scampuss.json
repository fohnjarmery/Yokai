{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.deref.json",
  "relic_effects": [
    {
      "id": "ScampussEffect",
      "name": "RelicEffectDrawOnPreOpeningDraw",
      "param_int": 1,
      "param_card_filter": "OnlyUnit",
      "param_card_filter_2": "ExcludeChampions",
      "param_excluded_subtypes": [ "SubtypesData_BannerUnit" ],
      "param_bool": true,
      "param_upgrade": "@ScampussUpgrade"
    }
  ],
  "upgrades": [
    {
      "id": "ScampussUpgrade",
      "bonus_damage": 10,
      "cost_reduction": 1
    }
  ],
  "relics": [
    {
      "id": "Scampuss",
      "type": "collectable",
      "names": {
        "english": "Friendly Scampuss",
        "chinese": "友好的猫又"
      },
      "descriptions": {
        "english": "On Deployment Phase, draw a non-Banner unit and apply +10[attack] and -1[ember].",
        "chinese": "部署阶段，抽一张非旗帜单位并施加+10[attack]和-1[ember]。"
      },
      "relic_activated": {
        "english": "Meow~",
        "chinese": "喵~"
      },
      "lore_tooltips": [
        {
          "english": "Pretty cute.",
          "chinese": "相当可爱。"
        }
      ],
      "lore_style": "heph",
      "relic_effects": [ "@ScampussEffect" ],
      "icon": "@YokaiRelicIcon7",
      "icon_small": "@YokaiRelicIconSmall7",
      "extensions": [
        {
          "collectable": {
            "class": "@ClassYokai",
            "pools": [ "MegaRelicPool" ],
            "rarity": "common",
            "deprioritize_in_ftue_drafts": true
          }
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "YokaiRelicIcon7",
      "path": "textures/YokaiRelicIcon7.png"
    },
    {
      "id": "YokaiRelicIconSmall7",
      "path": "textures/YokaiRelicIconIconSmall7.png"
    }
  ]
}