{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.deref.json",
  "cards": [
    {
      "id": "DemonParade",
      "names": {
        "english": "Demon Parade"
      },
      "descriptions": {
        "english": "When you play a unit, draw a unit and reduce its cost to 0."
      },
      "lore_tooltips": [
        {
          "english": "Lore stuff."
        }
      ],
      "card_art": "@DemonParadeArt",
      "cost": 1,
      "card_type": "room",
      "rarity": "rare",
      "class": "@ClassYokai",
      "targets_room": true,
      "targetless": true,
      "effects": [
        "@DemonParadeRoomEffect"
      ],
      "pools": [
        "MegaPool",
        "RoomAndEquipmentMerchant_RoomPool",
        "RoomAndEquipmentDraftPool",
        "TrainRoomPool"
      ]
    }
  ],
  "upgrades": [
    {
      "id": "DemonParadeRoomUpgrade",
      "titles": {
        "english": "DemonParade"
      },
      "descriptions": {
        "english": "When you play a unit, draw a unit and reduce its cost to 0."
      },
      "trigger_upgrades": [
        "@DemonParadeTrigger"
      ],
      "hide_icon_on_card": true,
      "icon": "@DemonParadeArt"
    },
    {
      "id": "DemonParadeCostUpgrade",
      "cost_reduction": 99
    }
  ],
  "character_triggers": [
    {
      "id": "DemonParadeTrigger",
      "descriptions": {
        "english": "When you play a unit, draw a unit and reduce its cost to 0."
      },
      "trigger": "on_spawn",
      "hide_visual_and_ignore_silence": true,
      "effects": [
        "@DemonParadeDiscount",
        "@DemonParadeDraw"
      ]
    }
  ],
  
  "effects": [
    {
      "id": "DemonParadeRoomEffect",
      "name": "CardEffectAttachTrainRoomAttachment",
      "target_mode": "room",
      "param_upgrade": "@DemonParadeRoomUpgrade",
      "param_bool": false,
      "param_bool_2": false,
      "target_team": "monsters"
    },
    {
      "id": "DemonParadeDiscount",
      "name": "CardEffectAddTempCardUpgradeToNextDrawnCard",
      "param_upgrade": "@DemonParadeCostUpgrade"
    },
    {
      "id": "DemonParadeDraw",
      "name": "CardEffectDrawType",
      "param_int": 1,
      "param_card_filter": "OnlyUnit"
    }
  ],
 
  "sprites": [
    {
      "id": "DemonParadeArt",
      "path": "textures/HundredDemonParadeArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "DemonParadeArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@DemonParadeArt"
        }
      }
    }
  ]
}