{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.deref.json",
  "cards": [
    {
      "id": "DemonParade",
      "names": {
        "english": "Demon Parade",
        "chinese": "百鬼夜行"
      },
      "descriptions": {
        "english": "When you play a unit, fill the floor with copies. Allied units die at the end of the turn.",
        "chinese": "当你打出单位时，用复制品填满楼层。友方单位在回合结束时死亡。"
      },
      "lore_tooltips": [
        {
          "english": "Lore stuff.",
          "chinese": "百鬼夜行的传说在夜幕中流传。"
        }
      ],
      "card_art": "@DemonParadeArt",
      "cost": 2,
      "card_type": "room",
      "rarity": "rare",
      "class": "@ClassYokai",
      "targets_room": true,
      "targetless": true,
      "effects": [
        "@DemonParadeRoomEffect"
      ],
      "pools": [
        "MegaPool",
        "RoomAndEquipmentMerchant_RoomPool",
        "RoomAndEquipmentDraftPool",
        "TrainRoomPool"
      ]
    }
  ],
  "upgrades": [
    {
      "id": "DemonParadeRoomUpgrade",
      "titles": {
        "english": "DemonParade",
        "chinese": "百鬼夜行"
      },
      "descriptions": {
        "english": "When you play a unit, fill the floor with copies. Allied units die at the end of the turn.",
        "chinese": "当你打出单位时，用复制品填满楼层。友方单位在回合结束时死亡。"
      },
      "trigger_upgrades": [
        "@DemonParadeTrigger",
        "@DemonParadeEndTurnTrigger"
      ],
      "hide_icon_on_card": true,
      "icon": "@DemonParadeArt"
    },
    {
      "id": "DemonParadeCostUpgrade",
      "cost_reduction": 99
    }
  ],
  "character_triggers": [
    {
      "id": "DemonParadeTrigger",
      "descriptions": {
        "english": "Create 3 duplicates when played.",
        "chinese": "打出时创建3个复制品"
      },
      "trigger": "on_spawn",
      "hide_visual_and_ignore_silence": true,
      "effects": [
        "@DemonParadeDuplicate"
      ]
    },
    {
      "id": "DemonParadeEndTurnTrigger",
      "descriptions": {
        "english": "Die at the end of the turn.",
        "chinese": "回合结束时死亡"
      },
      "trigger": "post_combat",
      "hide_visual_and_ignore_silence": true,
      "effects": [
        "@DemonParadeDeath"
      ]
    }
  ],
  "effects": [
    {
      "id": "DemonParadeRoomEffect",
      "name": "CardEffectAttachTrainRoomAttachment",
      "target_mode": "room",
      "param_upgrade": "@DemonParadeRoomUpgrade",
      "param_bool": false,
      "param_bool_2": false,
      "target_team": "monsters"
    },
    {
      "id": "DemonParadeDuplicate",
      "name": "CardEffectCopyUnits",
      "param_int": 3,
      "target_mode": "self"
    },
    {
      "id": "DemonParadeDeath",
      "name": "CardEffectKill",
      "target_mode": "self"
    }
  ],
  "sprites": [
    {
      "id": "DemonParadeArt",
      "path": "textures/HundredDemonParadeArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "DemonParadeArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@DemonParadeArt"
        }
      }
    }
  ]
}