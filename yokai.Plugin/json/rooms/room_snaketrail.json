{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.deref.json",
  "cards": [
    {
      "id": "Snaketrail",
      "names": {
        "english": "Snaketrail",
        "chinese": "蛇踪"
      },
      "descriptions": {
        "english": "Whenever an enemy unit dies, other enemy units gain [yokai.Plugin_panic] <b>5</b>.",
        "chinese": "每当敌方单位死亡时，其他敌方单位获得[yokai.Plugin_panic] <b>5</b>。"
      },
      "lore_tooltips": [
        {
          "english": "Lore stuff.",
          "chinese": "蛇行过后，恐惧蔓延。"
        }
      ],
      "card_art": "@SnaketrailArt",
      "cost": 0,
      "card_type": "room",
      "rarity": "common",
      "class": "@ClassYokai",
      "targets_room": true,
      "targetless": true,
      "effects": [
        "@SnaketrailRoomEffect"
      ],
      "pools": [
        "MegaPool"
      ]
    }
  ],
  "upgrades": [
    {
      "id": "SnaketrailRoomUpgrade",
      "titles": {
        "english": "Snaketrail",
        "chinese": "蛇踪"
      },
      "descriptions": {
        "english": "Whenever an enemy unit dies, other enemy units gain Panic <b>5</b>.",
        "chinese": "每当敌方单位死亡时，其他敌方单位获得恐慌<b>5</b>。"
      },
      "trigger_upgrades": [
        "@SnaketrailTrigger"
      ],
      "hide_icon_on_card": true,
      "icon": "@SnaketrailArt"
    }
  ],
  "character_triggers": [
    {
      "id": "SnaketrailTrigger",
      "descriptions": {
        "english": "Whenever an enemy unit dies, other enemy units gain [yokai.Plugin_panic] [effect0.status.power].",
        "chinese": "每当敌方单位死亡时，其他敌方单位获得[yokai.Plugin_panic] [effect0.status.power]。"
      },
      "trigger": "on_death",
      "hide_visual_and_ignore_silence": true,
      "effects": [
        "@ApplySnaketrailUpgrade"
      ]
    }
  ],
  "effects": [
    {
      "id": "SnaketrailRoomEffect",
      "name": "CardEffectAttachTrainRoomAttachment",
      "target_mode": "room",
      "param_upgrade": "@SnaketrailRoomUpgrade",
      "param_bool": false,
      "param_bool_2": false,
      "target_team": "heroes"
    },
    {
      "id": "ApplySnaketrailUpgrade",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "room",
      "additional_tooltips": [
        "@YokaiPanicTooltip"
      ],
      "target_team": "heroes",
      "param_status_effects": [
        {
          "status": "@panic",
          "count": 5
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "SnaketrailArt",
      "path": "textures/SnaketrailArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "SnaketrailArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@SnaketrailArt"
        }
      }
    }
  ]
}