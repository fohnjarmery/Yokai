{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.deref.json",
  "cards": [
    {
      "id": "ToriiGate",
      "names": {
        "english": "Torii Gate"
      },
      "descriptions": {
        "english": "Friendly units gain Haunt 5 and cleanse negative status effects on Resolve."
      },
      "lore_tooltips": [
        {
          "english": "Lore stuff."
        }
      ],
      "card_art": "@ToriiGateArt",
      "cost": 1,
      "card_type": "room",
      "rarity": "uncommon",
      "class": "@ClassYokai",
      "targets_room": true,
      "targetless": true,
      "effects": [
        "@ToriiGateRoomEffect"
      ],
      "pools": [
        "MegaPool",
        "RoomAndEquipmentMerchant_RoomPool",
        "RoomAndEquipmentDraftPool",
        "TrainRoomPool"
      ]
    }
  ],
  "upgrades": [
    {
      "id": "ToriiGateRoomUpgrade",
      "titles": {
        "english": "ToriiGate"
      },
      "descriptions": {
        "english": "Friendly units gain Haunt 5 and cleanse negative status effects on Resolve."
      },
      "trigger_upgrades": [
        "@ToriiGateTrigger"
      ],
      "status_effect_upgrades": [
        {
          "status": "@haunt",
          "count": 5
        }
      ],
      "hide_icon_on_card": true,
      "icon": "@ToriiGateArt"
    }
  ],
  "character_triggers": [
    {
      "id": "ToriiGateTrigger",
      "descriptions": {
        "english": "Friendly units gain Resolve: Remove negative status effects."
      },
      "trigger": "post_combat",
      "hide_visual_and_ignore_silence": true,
      "effects": [
        "@ToriiGateCleanse"
      ]
    }
  ],
  "effects": [
    {
      "id": "ToriiGateRoomEffect",
      "name": "CardEffectAttachTrainRoomAttachment",
      "target_mode": "room",
      "param_upgrade": "@ToriiGateRoomUpgrade",
      "param_bool": false,
      "param_bool_2": false,
      "target_team": "monsters"
    },
    {
      "id": "ToriiGateCleanse",
      "name": "CardEffectRemoveAllStatusEffects",
      "param_int": 1,
      "target_mode": "self",
      "target_team": "monsters"
    }
  ],
  "sprites": [
    {
      "id": "ToriiGateArt",
      "path": "textures/ToriiGateArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "ToriiGateArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@ToriiGateArt"
        }
      }
    }
  ]
}