{
    "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.deref.json",
    "cards": [{
        "id": "Darkness",
        "names": {
            "english": "Darkness"
        },
        "descriptions": {
            "english": "[Shuffle] enemy units. Apply 2 Panic."
        },
        "rarity": "common",
        "class": "@ClassYokai",
        "card_art": "@DarknessArt",
        "targets_room": true,
        "targetless": false,
        "pools": [
            "StarterCardsOnly"
        ],
        "cost": 1,
        "effects": [
            {
                "id":"@DarknessShuffle"
            },
            {
                "id":"@DarknessStatus"
            }
        ]
    }],
    "effects": [
      {
          "id": "DarknessShuffle",
          "name": {
            "id": "@CardEffectShuffleUnits",
            "mod_reference": "Conductor"
               },
          "target_mode": "room",
          "target_team": "heroes"
        },
        {
          "id": "DarknessStatus",
          "name": "CardEffectAddStatusEffect",
          "target_mode": "room",
          "target_team": "heroes",
          "param_status_effects": [
            {
              "status": "@panic",
              "count": 2
            }
          ]
        }
    ],
    "sprites": [{
        "id": "DarknessArt",
        "path": "textures/DarknessArt.png"
    }],
    "game_objects": [{
        "id": "DarknessArt",
        "type": "card_art",
        "extensions": {
            "card_art": {
                "sprite": "@DarknessArt"
            }
        }
    }]
}