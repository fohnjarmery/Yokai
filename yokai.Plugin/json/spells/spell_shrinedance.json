{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.deref.json",
  "cards": [
    {
      "id": "ShrineDance",
      "names": {
        "english": "Shrine Dance",
        "chinese": "神社之舞"
      },
      "descriptions": {
        "english": "+[effect0.power][capacity] on this floor. Restore [effect1.power] health to friendly units and cleanse negative status effects. Increase the cost of this card by 1 permanently.",
        "chinese": "此楼层+[capacity] [effect0.power]。为友方单位恢复[effect1.power]生命值并清除负面状态效果。此卡牌费用永久增加1点。"
      },
      "rarity": "uncommon",
      "unlock_level": 4,
      "class": "@ClassYokai",
      "card_art": "@ShrineDanceArt",
      "targets_room": true,
      "targetless": true,
      "pools": [
        "MegaPool"
      ],
      "cost": 2,
      "effects": [
        {
          "id": "@ShrineDanceCapacity"
        },
        {
          "id": "@ShrineDanceHeal"
        },
        {
          "id": "@ShrineDanceCleanse"
        },
        {
          "id": "@ShrineDanceFragile"
        },
        {
          "id": "@ShrineDanceCost"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "ShrineDanceCapacity",
      "name": "CardEffectAdjustRoomCapacity",
      "target_mode": "room",
      "target_team": "monsters",
      "param_int": 2
    },
    {
      "id": "ShrineDanceHeal",
      "name": "CardEffectHeal",
      "target_mode": "room",
      "target_team": "monsters",
      "param_int": 100
    },
    {
      "id": "ShrineDanceCleanse",
      "name": "CardEffectRemoveAllStatusEffects",
      "param_int": 1,
      "target_mode": "room",
      "target_team": "monsters"
    },
    {
      "id": "ShrineDanceFragile",
      "name": "CardEffectRemoveStatusEffect",
      "target_mode": "last_targeted_characters",
      "target_team": "monsters",
      "hide_tooltip": true,
      "param_status_effects": [
        {
          "status": "fragile",
          "count": 1
        }
      ]
    },
    {
      "id": "ShrineDanceCost",
      "name": "CardEffectAddUpgradeToCurrentCard",
      "param_upgrade": "@ShrineDanceCostUpgrade"
    }
  ],
  "upgrades": [
    {
      "id": "ShrineDanceCostUpgrade",
      "cost_reduction": -1
    }
  ],
  "sprites": [
    {
      "id": "ShrineDanceArt",
      "path": "textures/ShrineDanceArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "ShrineDanceArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@ShrineDanceArt"
        }
      }
    }
  ]
}