{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.deref.json",
  "cards": [
    {
      "id": "ThunderingDrums",
      "names": {
        "english": "Thundering Drums",
        "chinese": "雷鸣太鼓"
      },
      "descriptions": {
        "english": "Apply [yokai.Plugin_haunt] [effect0.status0.power] to an allied unit then apply <b>Conduit</b> equal to <b>Haunt</b> stacks.",
        "chinese": "为友方单位施加[yokai.Plugin_haunt] [effect0.status0.power]，然后施加等同于<b>附灵</b>层数的<b>传导</b>。"
      },
      "rarity": "uncommon",
      "class": "@ClassYokai",
      "card_art": "@ThunderingDrumsArt",
      "targets_room": true,
      "targetless": false,
      "pools": [
        "MegaPool"
      ],
      "cost": 2,
      "effects": [
        {
          "id": "@ThunderingDrumsHaunt"
        },
        {
          "id": "@ThunderingDrumsConduit"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "ThunderingDrumsHaunt",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "drop_target_character",
      "target_team": "monsters",
      "param_status_effects": [
        {
          "status": "@haunt",
          "count": 4
        }
      ]
    },
    {
      "id": "ThunderingDrumsConduit",
      "name": "CardEffectAddStatusEffectPerOtherEffect",
      "target_mode": "last_targeted_characters",
      "target_team": "both",
      "param_bool": true,
      "param_int": 1,
      "param_status_effects": [
        {
          "status": "conduit",
          "count": 1
        },
        {
          "status": "@haunt",
          "count": 1
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "ThunderingDrumsArt",
      "path": "textures/ThunderingDrumsArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "ThunderingDrumsArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@ThunderingDrumsArt"
        }
      }
    }
  ]
}