      "param_bool": true,
      "param_status_effects": [
        {
          "status": "captured_soul",
          "count": 3
        }
      ]
    },
    {
      "id": "KappaGiveGold",
      "name": "CardEffectRewardGold",
      "target_mode": "room",
      "target_team": "monsters",
      "param_int": 15,
      "should_test": true,
      "should_cancel_subsequent_effects_if_test_fails": true,
      "should_fail_to_cast_if_test_fails": true
