    }
  ],
  "character_triggers": [
    {
      "id": "ShogoroTrigger",
      "descriptions": {
        "english": "Gain [soul] [effect0.status0.power]."
      },
      "trigger": {
        "id": "@Evoke",
        "mod_reference": "Conductor"
      },
      "effects": [
        {
          "id": "@ShogoroGainSoul"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnShogoro",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "param_character": "@Shogoro"
    },
    {
      "id": "ShogoroGainSoul",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "self",
      "target_team": "none",
      "param_status_effects": [
        {
          "status": "captured_soul",
          "count": 1
        }
      ]
    },

    {
      "id": "ShogoroCheckSouls",
      "name": {
        "id": "@CardEffectRequireStatusThreshold",
        "mod_reference": "Conductor"
      },
      "target_mode": "self",
      "should_test": true,
      "should_cancel_subsequent_effects_if_test_fails": true,
      "param_bool": true,
      "param_status_effects": [
        {
          "status": "captured_soul",
          "count": 3
        }
      ]
    },
    {
      "id": "ShogoroApplyShield",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "room",
      "target_team": "monsters",
      "param_status_effects": [       
        {
          "status": "damage shield",
          "count": 1
        }
      ]
    },

    {
      "id": "ShogoroRemoveSouls",
      "name": "CardEffectRemoveStatusEffect",
      "target_mode": "self",
      "param_status_effects": [
        {
          "status": "captured_soul",
          "count": 3
        }
      ]
    }

  ],

  "sprites": [
    {
      "id": "Shogoro",
      "path": "textures/ShogoroCardArt.png"
    },
    {
